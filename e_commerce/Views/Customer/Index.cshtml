@model IEnumerable<e_commerce.EF.product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageCustomer.cshtml";
    string stk;
    string nt = "Cart not availble";
}

<h2>Index</h2>
@{
    if (TempData["msg"] != null)
    {
        <center><label class="alert bg-success" role="alert" id="myLabel">@TempData["msg"]</label></center>
        <script>
            setTimeout(function () {
                $('#myLabel').fadeOut('slow');
            }, 1500);
        </script>
    }


}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Stock
        </th>
        <th>
            Cetegory
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @{
                    if (item.Qty > 0)
                    {
                        stk = "In Stock";
                    }
                    else
                    {
                        stk = "Out of Stock";
                    }

                    @stk
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cetegory.Name)
            </td>
            <td>
                @{
                    if (item.Qty > 0)
                    {

                        @Html.ActionLink("Add to Cart", "Add_to_Cart", new { id = item.id })

                    }
                    else
                    {
                        @nt
                    }
                }
            </td>
        </tr>
    }

</table>